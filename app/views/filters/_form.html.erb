<%= simple_form_for(@filter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :field_name %>
    <%= f.input :field_type, collection: Filter::TYPES, label_method: ->(type){ t("helpers.filters.#{type}") } %>
    <%= f.input :filterable, as: :boolean %>
    <%= f.input :required, as: :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Cancelar', filters_path, class: 'btn btn-danger' %>
  </div>
<% end %>
